<Window x:Class="AppBank.Transfer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppBank"
        mc:Ignorable="d"
        Title="Transfer" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF7FAA6D" Offset="0.417"/>
                <GradientStop Color="#FFB9D5B2" Offset="0.777"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Enter card number:" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox x:Name="CardNumber" Width="300" Height="50" Margin="0,0,0,10"/>
            <Label Content="Enter transfer amount:" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox x:Name="TransferAmount" Width="300" Height="50" Margin="0,0,0,10"/>
            <Button Content="Transfer" Width="300" Height="50" Margin="0,0,0,10" Click="Transfer_Click"/>
            <Button Content="Return to menu" Width="300" Height="50" Margin="0,0,0,10" Click="ReturnToMenu_Click"/>
        </StackPanel>
    </Grid>
</Window>
